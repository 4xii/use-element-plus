{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["node", "vite/client", "jest", "element-plus/global","cypress"],
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "use-element-plus": ["../src/index.ts"]
    },
    "baseUrl": "./"
  },
  "include": ["src", "*", "../../packages/shim.d.ts","cypress"]
}
